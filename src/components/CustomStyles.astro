---
import '@fontsource-variable/inter';

// 'DM Sans'
// Nunito
// Dosis
// Outfit
// Roboto
// Literata
// 'IBM Plex Sans'
// Karla
// Poppins
// 'Fira Sans'
// 'Libre Franklin'
// Inconsolata
// Raleway
// Oswald
// 'Space Grotesk'
// Urbanist
---

<style is:inline>
  :root {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable';

    --aw-color-primary: rgb(0 92 97);
    --aw-color-secondary: rgb(0 122 130);
    --aw-color-accent: rgb(0 171 184);

    --aw-color-text-heading: rgb(0 0 0);
    --aw-color-text-default: rgb(16 16 16);
    --aw-color-text-muted: rgb(16 16 16 / 66%);
    --aw-color-bg-page: rgb(255 255 255);

    --aw-color-bg-page-dark: rgb(3 6 32);

    ::selection {
      background-color: rgb(0 171 184 / 30%);
      color: rgb(0 92 97);
    }
  }

  .text-gradient {
    background: linear-gradient(135deg, rgb(0 171 184) 0%, rgb(0 122 130) 50%, rgb(0 171 184) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    display: inline-block;
  }

  .dark .text-gradient {
    background: linear-gradient(135deg, rgb(0 171 184) 0%, rgb(0 220 240) 50%, rgb(0 171 184) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    display: inline-block;
  }

  .dark {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable';

    --aw-color-primary: rgb(0 171 184);
    --aw-color-secondary: rgb(0 138 149);
    --aw-color-accent: rgb(0 92 97);

    --aw-color-text-heading: rgb(247, 248, 248);
    --aw-color-text-default: rgb(229 236 246);
    --aw-color-text-muted: rgb(229 236 246 / 66%);
    --aw-color-bg-page: rgb(3 6 32);

    ::selection {
      background-color: rgb(0 171 184 / 30%);
      color: rgb(0 171 184);
    }
  }

  /* Hero Image Floating Animation */
  .hero-image-container {
    perspective: 1000px;
    transform-style: preserve-3d;
    overflow: visible;
  }

  .hero-floating-image {
    transform-style: preserve-3d;
    will-change: transform;
    transform-origin: center center;
    display: block;
  }

  @media (prefers-reduced-motion: reduce) {
    .hero-floating-image {
      animation: none !important;
    }
  }
</style>
